!!!
%html
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv": "Content-Type"}
    %title #{@submission.survey.name} rating notification
    %link{href: "https://fonts.googleapis.com/css?family=Roboto+Condensed", rel: "stylesheet"}
    :css
      body  {
        font-family: 'Roboto Condensed', sans-serif;
        color: #767676;
      }
      .wrapper {
        padding: 5px;
        background-color: #F1F1F1;
        border-radius: 3px;
        width: 50%;
        margin-bottom: 10px;
      }
      h4 {
        color: #f72969;
      }
  %body
    = image_tag "logo.png", width: 200
    %h2
      = t("app.survey.email.text_primary", name: @submission.survey.name)
    - @submission.answers.each do |answer|
      - if answer.answer_raiting.present?
        .wrapper
          %h3
            #{t "app.answer.question"}:
            -
            = answer.question.title
          %h4
            #{t "app.answer.title" }:
            - 1.upto(answer.answer_raiting.response) do |star|
              &#x2605;

    %small
      = t("app.survey.email.footer", user: @submission.user,
        date: I18n.l(@submission.created_at, format: :custom))
