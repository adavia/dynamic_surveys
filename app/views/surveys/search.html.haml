- content_for :sub_nav do
  .col-md-5
    %h1= t("app.survey.search.subnav")
  .col-md-3
    %ul.list-inline
      %li
        = link_to t("app.customer.index.links.customer_all"), customers_path
      - if is_admin?
        %li
          = link_to t("app.customer.index.links.customer_new"),
            [:new, :admin, current_user, :customer]

.container
  .row
    .col-md-4.pull-right
      .panel-search
        = render "layouts/shared/search_form", path: search_surveys_path
  - @surveys.each_slice(2) do |(b1, b2)|
    .row
      .col-md-6
        = render b1
      .col-md-6
        = render b2 if b2
    .text-center
      = will_paginate @surveys
