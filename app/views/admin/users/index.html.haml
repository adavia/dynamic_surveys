- content_for :sub_nav do
  .col-md-5
    %h1= t "app.user.index.links.subnav"
  .col-md-3
    %ul.list-inline
      - if is_admin?
        %li
          = link_to t("app.user.index.links.user_all"), [:admin, :users]
        %li
          = link_to t("app.user.index.links.user_new"), [:new, :admin, :user]

.container
  - @users.each_slice(2) do |(b1, b2)|
    .row
      .col-md-6
        = render b1
      .col-md-6
        = render b2 if b2
    .text-center
      = will_paginate @users
