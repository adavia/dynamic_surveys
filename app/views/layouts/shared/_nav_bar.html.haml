.color-line
%nav.navbar.navbar-default
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-expanded": false,
        "data-target": "#bs-example-navbar-collapse-1",
        "data-toggle": "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Dynamic Surveys", "#", class: "navbar-brand"
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        - if logged_in?
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded": "false", "aria-haspopup": "true", "data-toggle": "dropdown", href: "#", role: "button"}
              Clients
              %span.caret
            %ul.dropdown-menu
              %li
                = link_to "New Customer", [:new, current_user, :customer]
              %li
                = link_to "All Customers", [current_user, :customers]
      %ul.nav.navbar-nav.navbar-right
        - if logged_in?
          %p.navbar-text
            Signed in as #{current_user}
          %li
            = link_to "Sign Out", session_path(current_user), method: :delete
        - else
          %li
            = link_to "Sign Up", [:new, :user]
          %li
            = link_to "Sign In", [:new, :session]
