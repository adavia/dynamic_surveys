.panel-list
  .row
    .col-md-9
      %h2
        = link_to customer.name, [@user, customer]
      %p
        = customer.description
    .col-md-3
      - if is_admin?
        = link_to fa_icon("remove"), [:admin, @user, customer],
          method: :delete, class: "pull-right"
      .dropdown
        %a.dropdown-toggle{"aria-expanded": "false", "aria-haspopup": "true",
        "data-toggle": "dropdown", href: "#", role: "button"}
          %h2
            %strong
              = customer.surveys_count
              Surveys
            %span.caret
        %ul.dropdown-menu
          %li
            = link_to "All Surveys", [customer, :surveys]
          %li
            = link_to "Create new", [:new, customer, :survey]
