.color-line
%nav.navbar.navbar-default
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-expanded": false,
        "data-target": "#bs-example-navbar-collapse-1",
        "data-toggle": "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Dynamic Surveys", customers_path, class: "navbar-brand"
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        - if logged_in?
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded": "false", "aria-haspopup": "true", "data-toggle": "dropdown", href: "#", role: "button"}
              Customers
              %span.caret
            %ul.dropdown-menu
              %li
                = link_to "All Customers", customers_path
              - if is_admin?
                %li
                  = link_to "New Customer", [:new, :admin, current_user, :customer]
          - if is_admin?
            %li.dropdown
              %a.dropdown-toggle{"aria-expanded": "false", "aria-haspopup": "true", "data-toggle": "dropdown", href: "#", role: "button"}
                Users
                %span.caret
              %ul.dropdown-menu
                %li
                  = link_to "All Users", [:admin, :users]
                %li
                  = link_to "New User", [:new, :admin, :user]
      %ul.nav.navbar-nav.navbar-right
        - if logged_in?
          %p.navbar-text
            = link_to  "Signed in as #{current_user}", current_user
          %li
            = link_to "Sign Out", session_path(current_user), method: :delete
        - else
          %li
            = link_to "Sign Up", [:new, :user]
          %li
            = link_to "Sign In", [:new, :session]
