- content_for :sub_nav do
  .col-md-5
    %h1= t "app.survey.new.subnav"
  .col-md-3
    %ul.list-inline
      - if policy(Survey.new(customer: @customer)).create?
        %li
          = link_to t("app.survey.index.links.survey_new"), [:new, @customer, :survey],
            class: "btn btn-sm btn-default"
      %li
        = link_to "#{@customer.surveys_count} #{Survey.human_attribute_name(:class_name).downcase} total", [@customer, :surveys]
.container
  .row
    .col-md-10.col-md-offset-1
      .default-panel
        %h3
          = t "app.survey.new.text_primary"
        = render "form"
