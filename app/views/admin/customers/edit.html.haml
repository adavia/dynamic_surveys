- content_for :sub_nav do
  .col-md-5
    %h1 Update the following information
  .col-md-3
    %ul.list-inline
      %li
        = link_to "All CUSTOMERS", customers_path
      - if is_admin?
        %li
          = link_to "NEW CUSTOMER", [:new, :admin, current_user, :customer]
.container
  .row
    .col-md-8.col-md-offset-2
      .default-panel
        %h3
          Edit #{@customer.name} information
        = render "form"
