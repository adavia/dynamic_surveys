- content_for :sub_nav do
  .col-md-5
    %h1 #{@customer.name} - creation
  .col-md-3
    %ul.list-inline
      - if policy(Survey.new(customer: @customer)).create?
        %li
          = link_to "CREATE NEW SURVEY", [:new, @customer, :survey],
            class: "btn btn-sm btn-default"
      %li
        = link_to "#{@customer.surveys_count} surveys total", [@customer, :surveys]
.container
  .row
    .col-md-8.col-md-offset-2
      .default-panel
        %h3
          Complete the following fields to add a new survey
        - if @survey.errors.any?
          .alert.alert-danger
            = @survey.errors[:questions][0]
        = render "form"
