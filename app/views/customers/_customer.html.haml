.panel-list
  .row
    .col-md-9
      %h2
        = link_to customer.name, [current_user, customer]
      %p
        = customer.description
    .col-md-3
      = link_to fa_icon("remove"), [current_user, customer], method: :delete, class: "pull-right"
      .dropdown
        %a.dropdown-toggle{"aria-expanded": "false", "aria-haspopup": "true",
        "data-toggle": "dropdown", href: "#", role: "button"}
          %h2
            %strong
              12 Surveys
            %span.caret
        %ul.dropdown-menu
          %li
            = link_to "All Surveys", [customer, :surveys]
          %li
            = link_to "Create new", [:new, customer, :survey]
