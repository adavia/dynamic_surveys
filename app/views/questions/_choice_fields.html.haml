.choice-fields
  .row
    .col-xs-6
      = f.input :title, wrapper: :vertical_input_group, label: false do
        = f.input_field :title, class: "form-control input-sm",
          placeholder: Choice.human_attribute_name(:title)
        %span.input-group-btn
          = f.hidden_field :_destroy
          %button.btn.btn-danger.btn-sm{data: {behavior: "remove_choice_fields"}}
            = fa_icon "close"
