%h1.text-center.m-t-0
  #{@survey.customer.name} Survey
  %small
    = @survey.name
.panel-piled
  .dropdown.pull-right
    %a.dropdown-toggle{"aria-expanded": "false", "aria-haspopup": "true",
    "data-toggle": "dropdown", href: "#", role: "button"}
      = fa_icon "chevron-down"
    %ul.dropdown-menu
      %li
        = link_to "Edit survey", [:edit, @survey.customer, @survey]
      %li
        = link_to "Delete survey", [@survey.customer, @survey], method: :delete
  %h1
    = @survey.name
  %p
    = @survey.description

  - if @submission.errors.any?
    .alert.alert-danger
      Something went wrong during this submission. Check the errors below.
  %h2
    Questions
  = render "form"

