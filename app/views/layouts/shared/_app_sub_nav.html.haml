%header
  .header-content
    .container
      .row
        .col-md-4
          .media
            .media-left
              - if current_user.image.present?
                = link_to image_tag(current_user.image.url(:thumb),
                  class: "img-responsive img-circle", width: 80), current_user
              - else
                = link_to image_tag("default_user",
                  class: "img-responsive img-circle", width: 80), current_user
            .media-body
              %h4.text-light
                = t("app.subnav.welcome")
                = current_user
              %small
                = t("app.subnav.signed_in_as")
                = current_user.admin_text
        = yield :sub_nav

