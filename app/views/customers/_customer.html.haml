.panel-list
  .row
    .col-md-9
      - if policy(customer).show?
        %h2
          = link_to customer.name, customer
      - else
        %h2
          = customer.name
      %p
        = customer.description
    .col-md-3
      .dropdown
        %a.dropdown-toggle{"aria-expanded": "false", "aria-haspopup": "true",
        "data-toggle": "dropdown", href: "#", role: "button"}
          %h2
            %strong
              = customer.surveys_count
              Surveys
            %span.caret
        %ul.dropdown-menu
          %li
            = link_to "All surveys", [customer, :surveys]
          - if policy(Survey.new(customer: customer)).create?
            %li
              = link_to "Create new", [:new, customer, :survey]
          - if is_admin?
            %li
              = link_to "Archive customer", [:archive, :admin, customer.user, customer],
                method: :patch,
                data: { confirm: "Are you sure you want to archive this customer?" }
