!!!
%html
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv": "Content-Type"}
    %title #{@submission.survey.name} rating notification
    %link{href: "https://fonts.googleapis.com/css?family=Roboto+Condensed", rel: "stylesheet"}
    :css
      body  {
        font-family: 'Roboto Condensed', sans-serif;
        color: #767676;
      }
      .wrapper {
        padding: 5px;
        background-color: #F1F1F1;
        border-radius: 3px;
        width: 50%;
        margin-bottom: 10px;
      }
      h4 {
        color: #f72969;
      }

  %body
    = image_tag "logo.png", width: 200
    %h2
      = t("app.survey.email.text_primary", name: @alert.survey.name)
    %p
      @alert.body

    %h3
      = @answer.question.title

    - if @answer.question.question_type == "image"
      #{@answer.submission.sender} #{t("app.has_selected")} #{@answer.answer_image.image.name}
